    <section class="pb-60">
        <div class="product-slider">
            <div class="row">
                <div class="col-xs-12">
                    <div class="heading-part mb-30">
                        <h2 class="main_title">Related Products</h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="product-slider-main position-r">
                    <div class="owl-carousel pro_cat_slider">
@foreach (var item in Model.products)
{
                        <div class="item">
                            <div class="product-item">
                                <div class="sale-label"><span>Sale</span></div>
                                <div class="product-image">
                                    <a href="@Url.Action("ProductView", "Home", new { ProID = item.ProductID})"> <img src="~/images/@item.Image" alt=""> </a>
                                    <div class="product-detail-inner">
                                        <div class="detail-inner-left left-side">
                                            <ul>
                                                <li class="pro-cart-icon">
                                                    <form action="#" method="post">
                                                        <button title="Add to Cart"></button>
                                                    </form>
                                                </li>
                                                <li class="pro-wishlist-icon"><a href="#"></a></li>
                                                <li class="pro-compare-icon"><a href="#"></a></li>
                                            </ul>
                                        </div>
                                        <div class="rating-summary-block right-side">
                                            <div title="53%" class="rating-result"> <span style="width:53%"></span> </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="product-item-details">
                                    <div class="product-item-name"> <a href="@Url.Action("ProductView", "Home", new { ProID = item.ProductID})">@item.ProdctName</a> </div>
                                    <div class="price-box"> <span class="price">@item.Price</span> <del class="price old-price">$100.00</del> </div>
                                </div>
                            </div>
                        </div>
}

